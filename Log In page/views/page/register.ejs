<%- include('../includes/head.ejs') %>

<!-- Header Section -->
<section>
    <!-- Form Box Container -->
    <div class="form-box">
        <!-- Display the page title -->
        <h1><%=pageTitle%></h1>
        <div class="form-content">
            <!-- Registration Form -->
            <form action="/register" method="post">
                <!-- Display error message if it exists -->
                <% if(errorMessage) {%>
                    <div style="padding-top: 40px;">
                        <h5><%=errorMessage %></h5>
                    </div>
                <% } %>
                
                <!-- Input field for Email-ID -->
                <div class="input">
                    <ion-icon name="mail-outline"></ion-icon>
                    <label for="text" class="text">Email-ID</label>
                    <!-- Pre-fill email input with old input value if it exists -->
                    <input name="email" type="text" id="text" required value="<%=oldInput.email%>">
                </div>
                
                <!-- Input field for Password -->
                <div class="input">
                    <ion-icon name="lock-closed-outline"></ion-icon>
                    <label for="" class="text">Password</label>
                    <!-- Pre-fill password input with old input value if it exists -->
                    <input name="password" type="password" required value="<%=oldInput.password%>">
                </div>
                
                <!-- Input field for Confirm Password -->
                <div class="input">
                    <ion-icon name="lock-closed-outline"></ion-icon>
                    <label for="" class="text">Confirm Password</label>
                    <!-- Pre-fill confirm password input with old input value if it exists -->
                    <input name="confirmPassword" type="password" required value="<%=oldInput.confirmPassword%>">
                </div>
                
                <!-- Register Button -->
                <div class="but">
                    <button class="btn">Register</button>
                </div>

                <!-- CSRF token for security -->
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            </form>
        </div>
    </div>
</section>

<%- include('../includes/end.ejs') %>
